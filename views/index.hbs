<div class="container-fluid">
	{{#if isLoggedIn}}
	<div class="row">
		<div class="col-md-4"></div>
		<div class="col-md-4">
			<a href="/create-poll">
				<button class="btn btn-primary btn-block">
					Create a new poll
				</button>
			</a>
		</div>
		<div class="col-md-4"></div>
	</div>
	{{/if}}
	
	<div class="row">
		<div class="col-md-12">
			<h4>Recent polls</h4>
		</div>
	</div>
	
	{{#each recentPolls}}	
	<div class="row poll">
		<div class="col-md-12">
			<a href="/poll/{{id}}">{{name}}</a>
		</div>
	</div>
	{{/each}}
</div>

<style>
	.poll {
		font-size: 14px;
		text-align: center;
		font-weight: bold;
	}
	
</style>